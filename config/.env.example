# GGRM Stock Prediction - Environment Variables
# Copy file ini ke .env dan sesuaikan nilainya

# ==========================================
# Firebase Configuration
# ==========================================
# Untuk Firebase Admin SDK (JSON file path atau content)
FIREBASE_CREDENTIALS=
GOOGLE_APPLICATION_CREDENTIALS=

# ==========================================
# Model Configuration
# ==========================================
# Stock ticker untuk prediksi
TICKER=GGRM.JK

# Periode data untuk training (5y = 5 tahun)
DATA_PERIOD=5y

# Sequence length untuk LSTM
SEQ_LEN=60

# ==========================================
# API Configuration
# ==========================================
# Port untuk API server
API_PORT=8000

# Host untuk bind
API_HOST=0.0.0.0

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==========================================
# Database Configuration (Optional)
# ==========================================
# PostgreSQL connection (untuk production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ggrm_predictions
DB_USER=ggrm_user
DB_PASSWORD=changeme

# ==========================================
# Prediction Settings
# ==========================================
# Horizon untuk prediksi (hari)
PREDICTION_HORIZON=1

# Confidence threshold untuk notifikasi
CONFIDENCE_THRESHOLD=0.5

# ==========================================
# Mobile App Configuration
# ==========================================
# Base URL untuk API (ubah sesuai environment)
# Untuk development: http://localhost:8000
# Untuk Android emulator: http://10.0.2.2:8000
# Untuk device fisik: http://YOUR_MACHINE_IP:8000
API_BASE_URL=http://localhost:8000

# ==========================================
# Notifications
# ==========================================
# Enable/disable push notifications
NOTIFICATIONS_ENABLED=true

# FCM topic untuk broadcast
FCM_TOPIC=ggrm_predictions
